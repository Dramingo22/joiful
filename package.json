    "@types/reflect-metadata": "0.0.5",
    "@types/rimraf": "0.0.28",
    "chai": "3.5.0",
    "mocha": "3.2.0",
    "reflect-metadata": "0.1.9",
    "rimraf": "2.6.0",
    "source-map-support": "0.4.11",
    "typescript": "2.1.6"
